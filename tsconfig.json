{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "ts-node": {
    "files": true
  },

  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true
  }
}
